<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/card_bg"

    tools:context=".LoginActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/appbar"
        />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/candidate_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/ppl"
        />

    <EditText
        android:id="@+id/candidate_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Candidate Name"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/candidate_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Candidate Description"
        android:inputType="text"/>

    <Button
        android:id="@+id/add_Candidate"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        android:textSize="16dp"
        android:text="Add Candidate"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

    <ProgressBar
        android:id="@+id/add_Candidate_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>